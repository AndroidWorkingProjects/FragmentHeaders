<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10">

    <HorizontalScrollView
        android:id="@+id/categoryheading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:background="#ABCDEF"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 1" />

            <TextView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 2" />

            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"                android:text="level 3" />

            <TextView
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 4" />

            <TextView
                android:id="@+id/level5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 5" />

            <TextView
                android:id="@+id/level6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 6" />

            <TextView
                android:id="@+id/level7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 7" />

            <TextView
                android:id="@+id/level8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 8" />

            <TextView
                android:id="@+id/level9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 9" />

            <TextView
                android:id="@+id/level10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="left|center_vertical"
                android:text="level 10" />
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />
</LinearLayout>
